{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",

  "appId": "com.shokaishelf.app",
  "productName": "ShokaiShelf",
  "asar": true,
  "copyright": "Â© 2025 Maximilian Erb",

  "directories": {
    "output": "release/${version}"
  },

  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],

  // WICHTIG: Preload muss unpacked sein!
  "asarUnpack": [
    "electron/preload.cjs"
  ],

  "win": {
    "icon": "build/icons/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "ShokaiShelf-Setup-${version}.${ext}",
    "publisherName": "Maximilian Erb"
  },

  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": "always",
    "createStartMenuShortcut": true,
    "shortcutName": "ShokaiShelf",
    "installerIcon": "build/icons/icon.ico",
    "uninstallerIcon": "build/icons/icon.ico"
  },

  "mac": {
    "category": "public.app-category.entertainment",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icons/icon.icns",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "artifactName": "ShokaiShelf-Mac-${version}-${arch}.${ext}"
  },

  "dmg": {
    "title": "ShokaiShelf ${version}",
    "window": {
      "width": 540,
      "height": 380
    },
    "contents": [
      {
        "x": 144,
        "y": 200,
        "type": "file"
      },
      {
        "x": 396,
        "y": 200,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },

  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build/icons/",
    "category": "Video",
    "artifactName": "ShokaiShelf-Linux-${version}.${ext}"
  },

  "publish": {
    "provider": "generic",
    "url": "https://updates.shokaishelf.com"
  }
}